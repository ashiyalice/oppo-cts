<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 인터넷 권한 (Google 서비스 상태 확인용) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Shizuku가 사용하는 권한 (선택적) -->
    <uses-permission android:name="moe.shizuku.manager.permission.API_V23"
        tools:ignore="ProtectedPermissions" />

    <!-- 부팅 완료 후 자동 복원 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- 오버레이 허용 (화면 하단 트리거용) -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <!-- Android 11+ 패키지 가시성: 설치 여부 확인이 필요한 앱 -->
    <queries>
        <package android:name="com.google.android.googlequicksearchbox" />
        <package android:name="com.google.android.apps.bard" />
        <package android:name="com.google.android.gms" />
        <package android:name="moe.shizuku.privileged.api" />
    </queries>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OppoCTS"
        tools:targetApi="35">

        <!-- 메인 Activity — 앱 아이콘 탭 시 CTS 즉시 실행 -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.OppoCTS.Transparent"
            android:excludeFromRecents="true"
            android:taskAffinity="">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 트리거 전용 Activity — 외부 매퍼 연결용 -->
        <activity
            android:name=".ui.TriggerActivity"
            android:exported="true"
            android:theme="@style/Theme.OppoCTS.Transparent"
            android:excludeFromRecents="true"
            android:label="Trigger CTS (No Shizuku)"
            android:taskAffinity="">
        </activity>

        <!-- 셋업 위저드 Activity -->
        <activity
            android:name=".ui.SetupWizardActivity"
            android:exported="false"
            android:theme="@style/Theme.OppoCTS" />

        <!-- 설정 Activity -->
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.OppoCTS" />

        <!-- Quick Settings 타일 서비스 -->
        <service
            android:name=".trigger.CTSTileService"
            android:icon="@drawable/ic_cts"
            android:label="@string/tile_label"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <!-- 접근성 서비스 — 네비바 제스처 감지 -->
        <service
            android:name=".service.OppoAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- 화면 하단 투명 오버레이 서비스 -->
        <service
            android:name=".service.OverlayTriggerService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Floating trigger for Circle to Search" />
        </service>

        <!-- Shizuku ContentProvider (Shizuku API 바인딩용) -->
        <provider
            android:name="rikka.shizuku.ShizukuProvider"
            android:authorities="${applicationId}.shizuku"
            android:multiprocess="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.INTERACT_ACROSS_USERS_FULL"
            tools:ignore="ExportedContentProvider,ProtectedPermissions" />

        <!-- 부팅 완료 리시버 — 자동 복원 -->
        <receiver
            android:name=".service.BootReceiver"
            android:exported="true"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
